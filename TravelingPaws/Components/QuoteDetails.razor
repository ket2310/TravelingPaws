@page "/quotedetails"
@page "/quotedetails/{Id}"
@inherits QuoteDetailsBase

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@quote.petOwner.FirstName @quote.petOwner.LastName</h1>
            </div>

            <div class="card-body text-center">
                @*<img class="card-img-top" src="@Quote.PhotoPath" />*@

                <h4>Quote ID : @quote.QuoteId</h4>
                <h4>Email : @quote.petOwner.Email</h4>
                <h4>Phone Number : @quote.petOwner.PhoneNumber</h4>
            </div>
            <div class="card-footer text-center">
                <a href="/" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>
